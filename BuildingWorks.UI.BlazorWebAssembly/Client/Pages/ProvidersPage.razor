@page "/providers"
@using BuildingWorks.Models.Overview
@inject HttpClient Http


<h1>Providers</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (providers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var provider in providers)
            {
                <tr>
                    <td>@provider.Name</td>
                    <td>@provider.Country</td>
                    <td>@provider.AdditionalData</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private ProviderOverview[]? providers;

    protected override async Task OnInitializedAsync()
    {
        providers = await Http.GetFromJsonAsync<ProviderOverview[]>("providers/overview?EntitiesPerPage=3&CurrentPage=1");
    }
}
