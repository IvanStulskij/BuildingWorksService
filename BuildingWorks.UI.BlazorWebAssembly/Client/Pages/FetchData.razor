@page "/fetchdata"
@using BuildingWorks.Models.Overview
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (buildingObjects == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var buildingObject in buildingObjects)
            {
                <tr>
                    <td>@buildingObject.Name</td>
                    <td>@buildingObject.Type</td>
                    <td>@buildingObject.Customer</td>
                    <td>@buildingObject.Type</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private BuildingObjectOverview[]? buildingObjects;

    protected override async Task OnInitializedAsync()
    {
        buildingObjects = await Http.GetFromJsonAsync<BuildingObjectOverview[]>("building-objects");
    }
}
