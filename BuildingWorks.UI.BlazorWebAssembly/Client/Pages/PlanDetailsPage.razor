@page "/planDetails"
@using BuildingWorks.Models.Overview
@inject HttpClient Http


<h1>PlanDetials</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (planDetails == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var planDetail in planDetails)
            {
                <tr>
                    <td>@planDetail.IsCompleted</td>
                    <td>@planDetail.Price</td>
                    <td>@planDetail.WorkPart</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private PlanDetailOverview[]? planDetails;

    protected override async Task OnInitializedAsync()
    {
        planDetails = await Http.GetFromJsonAsync<PlanDetailOverview[]>("plan-details/overview?EntitiesPerPage=3&CurrentPage=1");
    }
}
